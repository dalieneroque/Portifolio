<section id="contato" class="contato-section">
    @using System.ComponentModel.DataAnnotations
    @using System.Net.Http
    @using System.Collections.Generic
    @using System.Threading.Tasks

    @inject HttpClient Http


    <div class="contato-wrapper">

        <div class="contato-texto">
            <h2>Vamos conversar?</h2>
            <p>
                Se você tem uma ideia, projeto ou oportunidade,
                será um prazer conversar com você.
            </p>
        </div>

        <div class="contact-card">

            @if (sucesso)
            {
                <div class="alert-success">
                    ✅ Mensagem enviada com sucesso!
                </div>
            }

            @if (erro)
            {
                <div class="alert-error">
                    ❌ Ocorreu um erro. Tente novamente.
                </div>
            }

            <EditForm Model="@contato" OnValidSubmit="EnviarFormulario">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label>Nome</label>
                    <InputText @bind-Value="contato.Nome" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <InputText @bind-Value="contato.Email" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Mensagem</label>
                    <InputTextArea @bind-Value="contato.Mensagem"
                                   class="form-control"
                                   rows="5" />
                </div>

                <button type="submit"
                        class="btn-enviar"
                        disabled="@enviando">
                    @if (enviando)
                    {
                        <span>Enviando...</span>
                    }
                    else
                    {
                        <span>Enviar Mensagem</span>
                    }
                </button>

            </EditForm>

        </div>

    </div>
</section>


