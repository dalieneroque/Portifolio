@* ===============================
   CÓDIGO C#
================================*@

@code {
    private string typedText = "";
    private string[] texts = new[]
    {
        "Olá, eu sou Daliene Roque",
        "Engenheira de Software",
        "Desenvolvedora .NET"
    };

    protected override async Task OnInitializedAsync()
    {
        await StartTypingLoop();
    }

    private async Task StartTypingLoop()
    {
        while (true)
        {
            foreach (var text in texts)
            {
                for (int i = 0; i <= text.Length; i++)
                {
                    typedText = text.Substring(0, i);
                    StateHasChanged();
                    await Task.Delay(70);
                }

                await Task.Delay(1500);

                for (int i = text.Length; i >= 0; i--)
                {
                    typedText = text.Substring(0, i);
                    StateHasChanged();
                    await Task.Delay(40);
                }

                await Task.Delay(500);
            }
        }
    }



    private ContatoModel contato = new();

    private bool enviando = false;
    private bool sucesso = false;
    private bool erro = false;

    private async Task EnviarFormulario()
    {
        enviando = true;
        sucesso = false;
        erro = false;

        try
        {
            var dados = new Dictionary<string, string>
        {
        { "name", contato.Nome },
        { "email", contato.Email },
        { "message", contato.Mensagem }
        };

            var content = new FormUrlEncodedContent(dados);

            var response = await Http.PostAsync(
            "https://formsubmit.co/dalienenl@gmail.com",
            content
            );

            if (response.IsSuccessStatusCode)
            {
                sucesso = true;
                contato = new ContatoModel();
            }
            else
            {
                erro = true;
            }
        }
        catch
        {
            erro = true;
        }

        enviando = false;
    }

    public class ContatoModel
    {
        [Required(ErrorMessage = "Nome é obrigatório")]
        public string Nome { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email é obrigatório")]
        [EmailAddress(ErrorMessage = "Email inválido")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Mensagem é obrigatória")]
        public string Mensagem { get; set; } = string.Empty;
    }
}